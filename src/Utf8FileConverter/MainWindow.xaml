<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Utf8FileConverter.MainWindow"
        xmlns:c="clr-namespace:Utf8FileConverter"
        Title="UTF-8 File Converter" Height="130" Width="643" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="textBoxSourcePath" Text="{Binding SourcePath}" HorizontalAlignment="Left" Height="23" Margin="34,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="591" FontSize="16" FontFamily="Consolas" MaxLines="1"/>
        <Button x:Name="buttonConvert" Content="Convert" HorizontalAlignment="Left" Margin="34,61,0,0" VerticalAlignment="Top" Width="157" Height="22" Click="buttonConvert_Click"/>
    </Grid>
</Window>
