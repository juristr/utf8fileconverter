        <Button Content="Convert" HorizontalAlignment="Left" Margin="34,61,0,0" VerticalAlignment="Top" Width="157" Click="Button_Click_2" Height="22"/>
        <DataGrid ItemsSource="{Binding ResultList}" HorizontalAlignment="Left" Margin="34,109,0,0" VerticalAlignment="Top" Height="160" Width="706"/>
